---
export const prerender = false
import { Image } from 'astro:assets';
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import MoveRight from "@/assets/icons/MoveRight.svg";

import imgEncofrado from "@/assets/images/SERVICE_SECTION/puente-rio-cachon-encofrado-lateral.jpeg";
import imgVaciado from "@/assets/images/SERVICE_SECTION/puente-rio-cachon-vaciado-nocturno-02.jpeg";
import imgMixer from "@/assets/images/SERVICE_SECTION/mixer-vaciado-valvulas-azules.jpeg";
import imgMontaje from "@/assets/images/SERVICE_SECTION/montaje-losas-prefabricadas-camion.jpeg";
import imgGrua from "@/assets/images/SERVICE_SECTION/grua-colocando-cabezal-pilar.jpeg";
import imgPlanta from "@/assets/images/SERVICE_SECTION/planta-tratamiento-ingenieros-gran-angular.jpeg";
import imgAcueducto from "@/assets/images/SERVICE_SECTION/acueducto-vista-aerea-rio.jpeg";
import imgPuente from "@/assets/images/SERVICE_SECTION/puente-rio-cachon-vista-aerea-lateral.jpeg";
---

<Layout>
    <Header />
    <section>
        <div
            class="relative h-120 md:h-126.25 rounded-2xl mt-2 lg:pt-6 lg:mt-6 w-full mx-auto pb-10 overflow-hidden"
        >
            <img
                src="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?w=1920&auto=format&fit=crop"
                alt=""
                class="absolute inset-0 w-full h-full object-cover object-center rounded-2xl"
            />
            <div class="inset-0 bg-black/40 absolute rounded-2xl"></div>
            <div
                class="pt-28 md:pt-44 pb-0 md:pb-18 md:max-w-335 lg:max-w-400 mx-auto md:px-5 lg:px-5 relative z-10"
            >
                <div
                    class="w-full flex flex-col lg:flex-row justify-between items-center gap-x-20 space-y-3 lg:space-y-0 mt-24 ml-6"
                >
                    <p
                        class="text-white font-bold text-4xl sm:text-4xl md:text-8xl tracking-tighter leading-normal md:leading-20 w-full"
                    >
                        Servicios
                    </p>
                    <div class="mb-5 flex justify-end w-full">
                        <p
                            class="text-balance lg:text-[18px] pt-2 lg:pt-0 text-white md:mt-20 font-general-sans"
                        >
                            Ofrecemos soluciones integrales de postensado: desde
                            materiales y equipos especializados hasta tensado
                            preciso, inyección de cemento y rendimiento
                            estructural a largo plazo.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas -->
        <div class="md:max-w-335 lg:max-w-400 mx-auto md:px-5 lg:px-5 py-16 md:py-24">
            <div class="flex flex-col lg:flex-row gap-12 lg:gap-20 items-center mx-5 md:mx-0">
                <!-- Columna izquierda: texto -->
                <div class="flex-1 flex flex-col gap-8">
                    <p class="flex items-center text-xs lg:text-base text-primary font-bold px-3 py-2 self-start bg-white rounded-full border border-gray-300">
                        ● Estadísticas
                    </p>

                    <h2 class="text-4xl md:text-6xl lg:text-7xl 2xl:text-8xl font-bold tracking-tighter text-primary leading-tight">
                        Optimizando la infraestructura <span class="font-bold">de inicio</span> a <span class="text-primary">final</span>
                    </h2>

                    <a href="/contact" class="text-sm lg:text-base font-bold inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-full hover:bg-[#002080] transition shadow-lg self-start">
                        Contáctenos
                        <MoveRight
                            class="inline-block ml-2 group-hover:animate-slide-in-left duration-75"
                        />
                    </a>
                </div>

                <!-- Columna derecha: tarjetas de estadísticas -->
                <div class="flex-1 w-full">
                    <div class="grid grid-cols-2 gap-4">
                        <div class="bg-primary rounded-2xl p-8 flex flex-col justify-center h-44">
                            <span class="text-4xl md:text-5xl font-bold text-white">100%</span>
                            <p class="text-white/80 font-medium mt-2 text-sm">Propiedad de Empleados</p>
                        </div>
                        <div class="bg-primary rounded-2xl p-8 flex flex-col justify-center h-44">
                            <span class="text-4xl md:text-5xl font-bold text-white">50+</span>
                            <p class="text-white/80 font-medium mt-2 text-sm">Empleados</p>
                        </div>
                        <div class="bg-primary rounded-2xl p-8 flex flex-col justify-center h-44">
                            <span class="text-4xl md:text-5xl font-bold text-white">2024</span>
                            <p class="text-white/80 font-medium mt-2 text-sm">Año de Fundación</p>
                        </div>
                        <div class="bg-primary rounded-2xl p-8 flex flex-col justify-center h-44">
                            <span class="text-4xl md:text-5xl font-bold text-white">+2</span>
                            <p class="text-white/80 font-medium mt-2 text-sm">Años de Operación</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-tertiary rounded-2xl w-full mx-auto px-6 md:px-10 lg:px-16 py-12 md:py-16 lg:py-20">
            <h2
                class="text-3xl md:text-5xl 2xl:text-6xl font-bold tracking-tighter text-center mb-10 md:mb-14 text-primary"
            >
                Experiencia en ingeniería estructural a su servicio
            </h2>

            <div
                class="grid grid-cols-1 sm:grid-cols-2 2xl:grid-cols-3 gap-4 md:gap-6 2xl:gap-8 max-w-7xl 2xl:max-w-425 mx-auto"
            >
                <!-- Card 1: Postesado -->
                <div
                    class="bg-white hover:bg-primary rounded-2xl p-6 flex flex-row gap-4 items-start transition duration-300 group/card 2xl:h-59.25"
                >
                    <div class="flex-1">
                        <h3
                            class="text-lg 2xl:text-xl font-bold mb-2 text-primary group-hover/card:text-white"
                        >
                            Postesado
                        </h3>
                        <p
                            class="text-gray-500 group-hover/card:text-white text-sm 2xl:text-base leading-relaxed font-general-sans"
                        >
                            Ejecución del postesado con adherencia en vigas
                            maestras, losas y elementos estructurales de alta
                            exigencia.
                        </p>
                    </div>
                    <Image
                        src={imgEncofrado}
                        alt="Postesado"
                        class="w-32 h-32 object-cover rounded-xl shrink-0"
                    />
                </div>

                <!-- Card 2: Inyección de Lechada -->
                <div
                    class="bg-white hover:bg-primary rounded-2xl p-6 flex flex-row gap-4 items-start transition duration-300 group/card 2xl:h-59.25"
                >
                    <div class="flex-1">
                        <h3
                            class="text-lg 2xl:text-xl font-bold mb-2 text-primary group-hover/card:text-white"
                        >
                            Inyección de Lechada
                        </h3>
                        <p
                            class="text-gray-500 group-hover/card:text-white text-sm 2xl:text-base leading-relaxed font-general-sans"
                        >
                            Inyección de lechada en vigas artesa y tipo AASHTO
                            para puentes y obras viales de gran envergadura.
                        </p>
                    </div>
                    <Image
                        src={imgVaciado}
                        alt="Inyección de Lechada"
                        class="w-32 h-32 object-cover rounded-xl shrink-0"
                    />
                </div>

                <!-- Card 3: Suministro de Materiales -->
                <div
                    class="bg-white hover:bg-primary rounded-2xl p-6 flex flex-row gap-4 items-start transition duration-300 group/card 2xl:h-59.25"
                >
                    <div class="flex-1">
                        <h3
                            class="text-lg 2xl:text-xl font-bold mb-2 text-primary group-hover/card:text-white"
                        >
                            Suministro de Materiales
                        </h3>
                        <p
                            class="text-gray-500 group-hover/card:text-white text-sm 2xl:text-base leading-relaxed font-general-sans"
                        >
                            Importación y distribución de torones, ductos,
                            anclajes y equipos especializados para hormigón
                            pretensado.
                        </p>
                    </div>
                    <Image
                        src={imgMixer}
                        alt="Suministro de Materiales"
                        class="w-32 h-32 object-cover rounded-xl shrink-0"
                    />
                </div>

                <!-- Card 4: Prefabricados -->
                <div
                    class="bg-white hover:bg-primary rounded-2xl p-6 flex flex-row gap-4 items-start transition duration-300 group/card 2xl:h-59.25"
                >
                    <div class="flex-1">
                        <h3
                            class="text-lg 2xl:text-xl font-bold mb-2 text-primary group-hover/card:text-white"
                        >
                            Prefabricados
                        </h3>
                        <p
                            class="text-gray-500 group-hover/card:text-white text-sm 2xl:text-base leading-relaxed font-general-sans"
                        >
                            Fabricación, transporte y montaje de elementos de
                            hormigón pretensado y prefabricado de hormigón
                            armado.
                        </p>
                    </div>
                    <Image
                        src={imgMontaje}
                        alt="Prefabricados"
                        class="w-32 h-32 object-cover rounded-xl shrink-0"
                    />
                </div>

                <!-- Card 5: Tesado Estructural -->
                <div
                    class="bg-white hover:bg-primary rounded-2xl p-6 flex flex-row gap-4 items-start transition duration-300 group/card 2xl:h-59.25"
                >
                    <div class="flex-1">
                        <h3
                            class="text-lg 2xl:text-xl font-bold mb-2 text-primary group-hover/card:text-white"
                        >
                            Tesado Estructural
                        </h3>
                        <p
                            class="text-gray-500 group-hover/card:text-white text-sm 2xl:text-base leading-relaxed font-general-sans"
                        >
                            Tesado de vigas con gatos hidráulicos mono-torón y
                            multi-torón de alta precisión y fuerza controlada.
                        </p>
                    </div>
                    <Image
                        src={imgGrua}
                        alt="Tesado Estructural"
                        class="w-32 h-32 object-cover rounded-xl shrink-0"
                    />
                </div>

                <!-- Card 6: Innovación y Calidad -->
                <div
                    class="bg-white hover:bg-primary rounded-2xl p-6 flex flex-row gap-4 items-start transition duration-300 group/card 2xl:h-59.25"
                >
                    <div class="flex-1">
                        <h3
                            class="text-lg 2xl:text-xl font-bold mb-2 text-primary group-hover/card:text-white"
                        >
                            Innovación y Calidad
                        </h3>
                        <p
                            class="text-gray-500 group-hover/card:text-white text-sm 2xl:text-base leading-relaxed font-general-sans"
                        >
                            Más de 15 años de experiencia con técnicos
                            especializados en soluciones de ingeniería de alta
                            calidad.
                        </p>
                    </div>
                    <Image
                        src={imgPlanta}
                        alt="Innovación y Calidad"
                        class="w-32 h-32 object-cover rounded-xl shrink-0"
                    />
                </div>

                <!-- Card 7: Soluciones Integrales (span full on last row) -->
                <div
                    class="bg-white hover:bg-primary rounded-2xl p-6 flex flex-row gap-4 items-start transition duration-300 group/card 2xl:h-59.25"
                >
                    <div class="flex-1">
                        <h3
                            class="text-lg 2xl:text-xl font-bold mb-2 text-primary group-hover/card:text-white"
                        >
                            Soluciones Integrales
                        </h3>
                        <p
                            class="text-gray-500 group-hover/card:text-white text-sm 2xl:text-base leading-relaxed font-general-sans"
                        >
                            Junto a nuestro grupo de empresas, ofrecemos
                            soluciones completas para proyectos de ingeniería y
                            construcción.
                        </p>
                    </div>
                    <Image
                        src={imgAcueducto}
                        alt="Soluciones Integrales"
                        class="w-32 h-32 object-cover rounded-xl shrink-0"
                    />
                </div>
            </div>
        </div>
        <div class="relative translate-y-16">
            <Image
                class="rounded-2xl w-full h-120 object-cover object-center"
                src={imgPuente}
                alt="Vista aérea del puente Río Cachón"
            />
            <div class="inset-0 bg-black/50 absolute rounded-2xl"></div>
            <div class="md:ml-14 absolute top-24 bottom-6 left-6 right-6">
                <div class="flex flex-col justify-between h-full">
                    <p
                        class="flex justify-start items-center text-xs lg:text-base text-primary font-bold lg:px-3 px-3 py-2 self-start bg-white rounded-full border border-gray-300"
                    >
                        ● Conversemos
                    </p>
                    <span
                        class="text-3xl md:text-6xl text-white font-bold mt-4 block lg:max-w-2xl leading-tight"
                        >Da el Siguiente Paso</span
                    >
                    <p
                        class="text-white mt-4 block lg:max-w-xl leading-tight font-general-sans text-base md:text-xl"
                    >
                        Ya sea que requiera un diseño estructural optimizado o una
                        ejecución precisa de postesado, estamos listos para reforzar
                        su proyecto con eficiencia ingenieril.
                    </p>

                    <a href="/projects" class="text-sm lg:text-base font-bold inline-block bg-white text-primary px-4 py-2 lg:px-4 lg:py-2 rounded-full hover:bg-gray-100 transition shadow-lg mt-8 self-start">
                        Contactanos
                        <MoveRight
                            class="inline-block ml-2 group-hover:animate-slide-in-left duration-75"
                        />
                    </a>
                </div>
            </div>
        </div>
    </section>
    <Footer />
</Layout>
