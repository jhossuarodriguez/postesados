---
export const prerender = false
import { Image } from 'astro:assets';
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import MoveRight from "@/assets/icons/MoveRight.svg";

import imgArmadoPuente from "@/assets/images/PROJECTS/armado-puente.webp";
import imgPilar from "@/assets/images/PROJECTS/pilar-tablestacas.webp";
import imgSoldadura from "@/assets/images/PROJECTS/soldadura-pilotes-acero.webp";
import imgConstruccionPuente from "@/assets/images/HERO/construccion-puente.webp";
import imgPlanta from "@/assets/images/HERO/planta-de-tratamiento-de-agua.webp";
import imgTuberia from "@/assets/images/HERO/instalacion-tuberia-rio.webp";
import imgEncofrado from "@/assets/images/SERVICE_SECTION/puente-rio-cachon-encofrado-lateral.jpeg";
import imgVaciado from "@/assets/images/SERVICE_SECTION/puente-rio-cachon-vaciado-nocturno-02.jpeg";
import imgMixer from "@/assets/images/SERVICE_SECTION/mixer-vaciado-valvulas-azules.jpeg";
import imgMontaje from "@/assets/images/SERVICE_SECTION/montaje-losas-prefabricadas-camion.jpeg";
import imgGrua from "@/assets/images/SERVICE_SECTION/grua-colocando-cabezal-pilar.jpeg";
import imgAcueducto from "@/assets/images/SERVICE_SECTION/acueducto-vista-aerea-rio.jpeg";
import imgPuenteAerea from "@/assets/images/SERVICE_SECTION/puente-rio-cachon-vista-aerea-lateral.jpeg";

const featuredProjects = [
    {
        image: imgArmadoPuente,
        category: "Puentes",
        title: "Puente Río Cachón — Armado Estructural",
        description: "Diseño y ejecución del armado estructural con sistema de postesado de alta resistencia."
    },
    {
        image: imgPlanta,
        category: "Infraestructura",
        title: "Planta de Tratamiento de Agua — Santo Domingo",
        description: "Construcción integral de planta de tratamiento con elementos prefabricados y postesados."
    }
];

const projects = [
    {
        image: imgEncofrado,
        category: "Puentes",
        title: "Puente Río Cachón — Encofrado Lateral"
    },
    {
        image: imgConstruccionPuente,
        category: "Puentes",
        title: "Construcción de Puente — Vista General"
    },
    {
        image: imgPilar,
        category: "Cimentación",
        title: "Pilares con Tablestacas de Acero"
    },
    {
        image: imgVaciado,
        category: "Puentes",
        title: "Vaciado Nocturno — Puente Río Cachón"
    },
    {
        image: imgMixer,
        category: "Suministro",
        title: "Vaciado con Mixer — Válvulas Industriales"
    },
    {
        image: imgSoldadura,
        category: "Cimentación",
        title: "Soldadura de Pilotes de Acero"
    },
    {
        image: imgMontaje,
        category: "Prefabricados",
        title: "Montaje de Losas Prefabricadas"
    },
    {
        image: imgGrua,
        category: "Prefabricados",
        title: "Colocación de Cabezal con Grúa"
    },
    {
        image: imgTuberia,
        category: "Infraestructura",
        title: "Cruce Aéreo de Tubería sobre Río"
    },
    {
        image: imgAcueducto,
        category: "Infraestructura",
        title: "Acueducto — Vista Aérea"
    },
    {
        image: imgPuenteAerea,
        category: "Puentes",
        title: "Puente Río Cachón — Vista Aérea"
    },
];
---

<Layout>
    <Header />
    <section>
        <!-- Hero Section -->
        <div class="bg-primary rounded-2xl mt-2 lg:mt-6 w-full mx-auto overflow-hidden">
            <div class="md:max-w-335 lg:max-w-400 mx-auto px-6 md:px-5 lg:px-5 pt-32 md:pt-44 pb-14 md:pb-20">
                <p class="text-white font-bold text-4xl sm:text-5xl md:text-8xl tracking-tighter leading-tight md:leading-20">
                    Nuestros Proyectos
                </p>
            </div>
        </div>

        <!-- Featured Section: Construyendo el Futuro -->
        <div class="md:max-w-335 lg:max-w-400 mx-auto md:px-5 lg:px-5 py-16 md:py-24">
            <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end gap-6 mb-12 mx-5 md:mx-0">
                <div class="flex-1">
                    <p class="flex items-center text-xs lg:text-base text-primary font-bold px-3 py-2 self-start bg-white rounded-full border border-gray-300 w-fit mb-6">
                        ● Proyectos
                    </p>
                    <h2 class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tighter text-primary leading-tight">
                        Construyendo el Futuro
                    </h2>
                </div>
                <div class="lg:max-w-md">
                    <p class="text-gray-500 text-base lg:text-lg font-general-sans leading-relaxed">
                        Somos líderes en soluciones de hormigón postesado en la República Dominicana. Cada proyecto refleja nuestra dedicación a la excelencia estructural y la innovación.
                    </p>
                </div>
            </div>

            <!-- Featured Projects (2 large cards) -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mx-5 md:mx-0">
                {featuredProjects.map((project) => (
                    <div class="group/card relative rounded-2xl overflow-hidden h-96 md:h-120 cursor-pointer">
                        <Image
                            src={project.image}
                            alt={project.title}
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover/card:scale-105"
                        />
                        <div class="absolute inset-0 bg-linear-to-t from-black/70 via-black/20 to-transparent"></div>
                        <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
                            <span class="inline-block text-xs font-bold text-primary bg-white px-3 py-1.5 rounded-full mb-3">
                                {project.category}
                            </span>
                            <h3 class="text-white text-xl md:text-2xl font-bold leading-snug">
                                {project.title}
                            </h3>
                            <p class="text-white/80 text-sm md:text-base font-general-sans mt-2 leading-relaxed">
                                {project.description}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="md:max-w-335 lg:max-w-400 mx-auto md:px-5 lg:px-5 pb-16 md:pb-24">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mx-5 md:mx-0">
                {projects.map((project) => (
                    <div class="group/card relative rounded-2xl overflow-hidden h-72 md:h-80 cursor-pointer">
                        <Image
                            src={project.image}
                            alt={project.title}
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover/card:scale-105"
                        />
                        <div class="absolute inset-0 bg-linear-to-t from-black/60 via-black/10 to-transparent"></div>
                        <div class="absolute bottom-0 left-0 right-0 p-5 md:p-6">
                            <span class="inline-block text-xs font-bold text-primary bg-white px-3 py-1.5 rounded-full mb-3">
                                {project.category}
                            </span>
                            <h3 class="text-white text-lg md:text-xl font-bold leading-snug">
                                {project.title}
                            </h3>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- CTA Section -->
        <div class="relative translate-y-16">
            <Image
                class="rounded-2xl w-full h-120 object-cover object-center"
                src={imgPuenteAerea}
                alt="Vista aérea del puente Río Cachón"
            />
            <div class="inset-0 bg-black/50 absolute rounded-2xl"></div>
            <div class="md:ml-14 absolute top-24 bottom-6 left-6 right-6">
                <div class="flex flex-col justify-between h-full">
                    <p class="flex justify-start items-center text-xs lg:text-base text-primary font-bold lg:px-3 px-3 py-2 self-start bg-white rounded-full border border-gray-300">
                        ● Conversemos
                    </p>
                    <span class="text-3xl md:text-6xl text-white font-bold mt-4 block lg:max-w-2xl leading-tight">
                        Da el Siguiente Paso
                    </span>
                    <p class="text-white mt-4 block lg:max-w-xl leading-tight font-general-sans text-base md:text-xl">
                        Ya sea que requiera un diseño estructural optimizado o una
                        ejecución precisa de postesado, estamos listos para reforzar
                        su proyecto con eficiencia ingenieril.
                    </p>
                    <a
                        href="/contact"
                        class="text-sm lg:text-base font-bold inline-block bg-white text-primary px-4 py-2 lg:px-4 lg:py-2 rounded-full hover:bg-gray-100 transition shadow-lg mt-8 self-start"
                    >
                        Contáctenos
                        <MoveRight class="inline-block ml-2 group-hover:animate-slide-in-left duration-75" />
                    </a>
                </div>
            </div>
        </div>
    </section>
    <Footer />
</Layout>
