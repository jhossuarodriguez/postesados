---
import MoveRight from "@/assets/icons/MoveRight.svg";
import Instagram from "@/assets/icons/social-media/instagram.svg";
import LinkedIn from "@/assets/icons/social-media/linkedIn.svg";
---

<footer
    class="bg-[#000070] text-white w-full py-16 lg:py-24 overflow-hidden mt-10 rounded-2xl"
>
    <div class="max-w-[1600px] mx-auto px-6 lg:px-20">
        <div
            class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-20 lg:mb-32 gap-10"
        >
            <h2
                class="text-5xl lg:text-7xl font-medium tracking-tight leading-tight"
            >
                Construyamos algo <br />
                <span class="font-bold">grande juntos.</span>
            </h2>

            <a
                href="/contacto"
                class="group bg-white text-[#000070] px-8 py-3 rounded-full font-bold text-lg flex items-center gap-3"
            >
                Contáctanos
                <MoveRight />
            </a>
        </div>

        <div class="border-t border-white/20 mb-16"></div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-8">
            <div class="lg:col-span-4 flex flex-col justify-between h-full">
                <div class="space-y-6">
                    <div class="flex items-center gap-2">
                        <div
                            class="text-2xl font-bold tracking-tighter uppercase italic"
                        >
                            <img
                                src="/logo_postesados_nobg.webp"
                                alt="Postesados Logo"
                                class="h-20 w-auto"
                                loading="lazy"
                            />
                            Postesados JHP
                        </div>
                    </div>

                    <div class="text-gray-300 text-sm space-y-1">
                        <p
                            class="font-bold text-white mb-2 uppercase tracking-wider text-xs"
                        >
                            Oficina
                        </p>
                        <a
                            class="block hover:text-white transition-colors underline decoration-white/30 underline-offset-4"
                            href="https://maps.app.goo.gl/hDjzE76zwmDkEnJVA"
                            rel="noopener noreferrer"
                            target="_blank"
                            title="Ubicación de la Oficina de Postesados"
                            aria-label="Ubicación de la Oficina de Postesados"
                        >
                            Santo Domingo, República Dominicana
                        </a>
                        <div class="pt-4 space-y-1">
                            <a
                                href="tel:8092225652"
                                class="block hover:text-white transition-colors"
                                >(809) 222-5652</a
                            >
                            <a
                                href="tel:8095189910"
                                class="block hover:text-white transition-colors"
                                >(809) 518-9910</a
                            >
                        </div>
                        <div class="pt-2">
                            <a
                                href="mailto:postesados@gmail.com"
                                class="block hover:text-white transition-colors underline decoration-white/30 underline-offset-4"
                                >postesados@gmail.com</a
                            >
                        </div>
                    </div>
                </div>

                <div class="flex gap-4 mt-8 lg:mt-auto pt-10">
                    <a
                        href="https://www.instagram.com/postesadosjhp/"
                        rel="noopener noreferrer"
                        target="_blank"
                        class="p-2 border border-white/20 rounded-full hover:bg-white hover:text-[#000070] transition-all"
                        title="Instagram Oficial de Postesados"
                        aria-label="Instagram Oficial de Postesados"
                    >
                        <Instagram />
                    </a>
                    <a
                        href="https://www.linkedin.com/company/postesadosjhp/"
                        rel="noopener noreferrer"
                        target="_blank"
                        class="p-2 border border-white/20 rounded-full hover:bg-white hover:text-[#000070] transition-all"
                        title="LinkedIn Oficial de Postesados"
                        aria-label="LinkedIn Oficial de Postesados"
                    >
                        <LinkedIn />
                    </a>
                </div>
            </div>

            <div class="lg:col-span-8 grid grid-cols-2 md:grid-cols-4 gap-8">
                <div class="flex flex-col gap-4">
                    <h3
                        class="font-bold text-xs uppercase tracking-wider mb-2 text-white/60"
                    >
                        Nosotros
                    </h3>
                    <a
                        href="/nosotros"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Nuestra Historia</a
                    >
                    <a
                        href="/equipo"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Liderazgo</a
                    >
                    <a
                        href="/grupo"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Grupo Empresarial</a
                    >
                </div>

                <div class="flex flex-col gap-4">
                    <h3
                        class="font-bold text-xs uppercase tracking-wider mb-2 text-white/60"
                    >
                        Qué Hacemos
                    </h3>
                    <a
                        href="/servicios/postesado"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Postesado y Pretensado</a
                    >
                    <a
                        href="/servicios/infraestructura"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Infraestructura Vial</a
                    >
                    <a
                        href="/servicios/prefabricados"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Prefabricados</a
                    >
                    <a
                        href="/servicios/suministros"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Suministro y Equipos</a
                    >
                </div>

                <div class="flex flex-col gap-4">
                    <h3
                        class="font-bold text-xs uppercase tracking-wider mb-2 text-white/60"
                    >
                        Proyectos
                    </h3>
                    <a
                        href="/proyectos"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Todos los Proyectos</a
                    >
                    <a
                        href="/proyectos/metro"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Metro Santo Domingo</a
                    >
                    <a
                        href="/proyectos/puentes"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Puentes</a
                    >
                </div>

                <div class="flex flex-col gap-4">
                    <h3
                        class="font-bold text-xs uppercase tracking-wider mb-2 text-white/60"
                    >
                        Legal
                    </h3>
                    <a
                        href="/privacidad"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Política de Privacidad</a
                    >
                    <a
                        href="/terminos"
                        class="hover:underline underline-offset-4 decoration-white/50 text-sm"
                        >Términos de Uso</a
                    >
                </div>
            </div>
        </div>

        <div
            class="mt-20 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center text-xs text-gray-400 gap-4"
        >
            <p>
                &copy; {new Date().getFullYear()} Postesados JHP, S.R.L. Todos los
                derechos reservados.
            </p>
            <div class="flex flex-col space-y-2">
                <p>Ingeniería y Tecnología en Hormigón.</p>
                <a
                    href="https://managerord.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block hover:text-white transition-colors underline decoration-white/30 underline-offset-4"
                    >Desarrollada por el equipo de Managero</a
                >
            </div>
        </div>
    </div>
</footer>
