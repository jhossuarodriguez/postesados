---
const navItems = [
    { label: "Inicio", href: "#inicio" },
    { label: "Nosotros", href: "#nosotros" },
    { label: "Servicios", href: "#servicios" },
    { label: "Proyectos", href: "#proyectos" },
    { label: "Novedades", href: "#novedades" },
    { label: "Contacto", href: "#contacto" },
];
---

<section>
    <header class="bg-white shadow-md z-50">
        {/* Top Section with Logo and Geopier */}
        <div class="relative">
            <div class="mx-auto px-4 py-4 flex items-center justify-between">
                {/* Left: Logo and Company Name */}
                <div class="flex items-center gap-3">
                    <img
                        src="/logo_postesados-01.webp"
                        alt="Postesados Logo"
                        class="h-16 w-auto"
                    />
                    <div>
                        <h1 class="text-2xl text-[#000070]">Postesados</h1>
                        <p
                            class="text-xs text-gray-700 uppercase tracking-wide"
                        >
                            Ingenier√≠a & Cimentaciones del Caribe, SRL
                        </p>
                        <p class="text-xs text-gray-500">www.postesados.com</p>
                    </div>
                </div>

                {/* Right: Geopier Section */}
                <div class="hidden lg:block relative">
                    <div class="flex items-center">
                        {/* Red diagonal stripe */}
                        <div
                            class="w-32 h-24 bg-red-600"
                            style={{
                                clipPath:
                                    "polygon(0 0, 100% 0, 80% 100%, 0% 100%)",
                            }}
                        >
                        </div>
                        {/* Blue section with Geopier text */}
                        <div
                            class="bg-[#1e3a8a] h-24 px-8 flex flex-col justify-center items-start -ml-8"
                        >
                            <h2 class="text-white text-2xl">GEOPIER</h2>
                            <p class="text-white/80 text-xs">
                                A Division of CMC
                            </p>
                        </div>
                    </div>
                </div>

                {/* Mobile Menu Button */}
                <!-- <button
                    class="lg:hidden text-[#000070]"
                    onClick={() => setIsMenuOpen(!isMenuOpen)}
                >
                    {
                        isMenuOpen ? (
                            <X class="w-6 h-6" />
                        ) : (
                            <Menu class="w-6 h-6" />
                        )
                    }
                </button> -->
            </div>
        </div>

        {/* Navigation Bar */}
        <nav class="bg-[#000070] hidden lg:block">
            <div class="container mx-auto px-4">
                <div class="flex items-center gap-1">
                    {
                        navItems.map((item, index) => (
                            <a
                                href={item.href}
                                class={`px-6 py-3 text-white text-sm hover:bg-[#0000a0] transition-colors ${
                                    index === 0
                                        ? "bg-[#0000a0] rounded-full"
                                        : ""
                                }`}
                            >
                                {item.label}
                            </a>
                        ))
                    }
                </div>
            </div>
        </nav>

        <!-- {/* Mobile Navigation */}
        {
            isMenuOpen && (
                <nav class="lg:hidden py-4 border-t bg-white">
                    {navItems.map((item) => (
                        <a
                            key={item.label}
                            href={item.href}
                            class="block py-3 px-4 text-gray-700 hover:text-[#000070] hover:bg-gray-50 transition-colors"
                            onClick={() => setIsMenuOpen(false)}
                        >
                            {item.label}
                        </a>
                    ))}
                </nav>
            )
        } -->
    </header>
</section>
