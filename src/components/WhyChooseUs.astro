---
import { Image } from 'astro:assets';
import Building from "@/assets/icons/building.svg";
import Users from "@/assets/icons/users.svg";
import Award from "@/assets/icons/award.svg";
import Briefcase from "@/assets/icons/briefcase.svg";
import ChevronRight from "@/assets/icons/nextButton.svg";

import imgBackgroundCompany from "@/assets/images/background_company.webp";
import bento1 from "@/assets/images/BENTO/Bento1.webp";
import bento2 from "@/assets/images/BENTO/Bento2.webp";
import bento3 from "@/assets/images/BENTO/Bento3.webp";
import bento4 from "@/assets/images/BENTO/Bento4.webp";
---

<section class="flex flex-col w-full py-16 lg:py-28 overflow-hidden">
    <div class="flex flex-col px-4 lg:px-10 max-w-6xl mx-auto w-full space-y-6">
        <div
            class="rounded-full border border-[#0032A0]/20 bg-[#0032A0]/5 px-5 py-2.5 w-fit backdrop-blur-sm"
        >
            <p
                class="flex justify-center items-center text-xs lg:text-sm text-[#0032A0] font-bold gap-2"
            >
                <span
                    class="inline-block w-2 h-2 rounded-full bg-[#0032A0] animate-pulse"
                ></span> Por qué elegirnos
            </p>
        </div>
        <div class="flex flex-col">
            <h2
                class="text-3xl lg:text-5xl xl:text-6xl text-[#0032A0] leading-tight"
            >
                Innovación en <span
                    class="font-bold bg-linear-to-r from-[#0032A0] to-[#0066CC] bg-clip-text text-transparent"
                    >Ingeniería,</span
                >
                <br />Impulsada por <span
                    class="font-bold bg-linear-to-r from-[#0032A0] to-[#0066CC] bg-clip-text text-transparent"
                    >Nuestra Experiencia</span
                >
            </h2>
        </div>
    </div>

    {/* Bento Grid */}
    <div class="max-w-6xl mx-auto w-full px-4 lg:px-10 mt-12 lg:mt-20">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-4 lg:gap-5">
            {/* Proyectos Realizados - Card grande */}
            <div
                class="lg:col-span-8 lg:row-span-2 rounded-4xl p-8 lg:p-12 flex flex-col justify-between min-h-100 transition-all duration-500 hover:shadow-2xl hover:shadow-[#0032A0]/30 hover:-translate-y-1 group relative overflow-hidden"
            >
                {/* Background image */}
                <Image
                    src={bento1}
                    alt="Proyectos de construcción"
                    class="absolute inset-0 h-full w-full object-cover transition-transform duration-1000 group-hover:scale-110"
                />
                <div
                    class="absolute inset-0 bg-linear-to-br from-[#0032A0]/95 via-[#0032A0]/90 to-[#001F66]/95"
                >
                </div>
                {/* Decorative elements */}
                <div
                    class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:bg-white/10 transition-all duration-700"
                >
                </div>
                <div
                    class="absolute bottom-0 left-0 w-48 h-48 bg-[#0066CC]/20 rounded-full blur-2xl translate-y-1/2 -translate-x-1/2"
                >
                </div>

                <div
                    class="bg-white/10 backdrop-blur-sm w-16 h-16 rounded-2xl flex items-center justify-center border border-white/10 group-hover:bg-white/20 transition-all duration-500 relative z-10"
                >
                    <Building class="text-white w-7 h-7" />
                </div>
                <div class="mt-auto space-y-3 relative z-10">
                    <p
                        class="text-white/70 text-sm tracking-widest uppercase font-medium"
                    >
                        Proyectos Realizados
                    </p>
                    <p
                        class="text-7xl lg:text-[110px] font-bold text-white leading-none counter-number"
                        data-target="500"
                    >
                        <span class="inline-block">+</span><span
                            class="counter"
                            data-target="500">0</span
                        >
                    </p>
                    <p
                        class="text-white/50 font-general-sans text-sm lg:text-base max-w-md pt-3 leading-relaxed"
                    >
                        Vigas pretensadas, puentes y estructuras de metro
                        completados exitosamente en toda la región
                    </p>
                </div>
            </div>

            {/* Clientes Satisfechos */}
            <div
                class="lg:col-span-4 border border-[#0032A0]/10 rounded-4xl p-7 lg:p-8 flex flex-col justify-between min-h-48 transition-all duration-500 hover:shadow-xl hover:shadow-[#0032A0]/10 hover:border-[#0032A0]/25 hover:-translate-y-1 group relative overflow-hidden"
            >
                {/* Background image */}
                <Image
                    src={bento2}
                    alt="Equipo de trabajo"
                    class="absolute inset-0 h-full w-full object-cover transition-transform duration-1000 group-hover:scale-110"
                />
                <div
                    class="absolute inset-0 bg-linear-to-br from-[#0032A0]/95 via-[#0032A0]/90 to-[#001F66]/95"
                >
                </div>

                <div
                    class="absolute -top-12 -right-12 w-32 h-32 bg-[#0032A0]/5 rounded-full blur-2xl group-hover:bg-[#0032A0]/10 transition-all duration-500"
                >
                </div>

                <div
                    class="bg-white/10 backdrop-blur-sm w-14 h-14 rounded-2xl flex items-center justify-center border border-white/10 group-hover:bg-white/20 transition-all duration-500 relative z-10"
                >
                    <Users class="text-white size-6" />
                </div>
                <div class="space-y-1.5 relative z-10">
                    <p
                        class="text-white/60 text-sm tracking-wide uppercase font-medium"
                    >
                        Clientes Satisfechos
                    </p>
                    <p
                        class="text-5xl lg:text-6xl font-bold text-white leading-none"
                    >
                        <span class="inline-block">+</span><span
                            class="counter"
                            data-target="150">0</span
                        >
                    </p>
                    <p class="text-white/70 text-sm font-general-sans">
                        En todo el país
                    </p>
                </div>
            </div>

            {/* Años en el Mercado */}
            <div
                class="lg:col-span-4 rounded-4xl p-7 lg:p-8 flex flex-col justify-between min-h-48 transition-all duration-500 hover:shadow-2xl hover:shadow-[#0032A0]/30 hover:-translate-y-1 group relative overflow-hidden"
            >
                {/* Background image */}
                <Image
                    src={bento3}
                    alt="Experiencia en construcción"
                    class="absolute inset-0 h-full w-full object-cover transition-transform duration-1000 group-hover:scale-110"
                />
                <div
                    class="absolute inset-0 bg-linear-to-br from-[#0032A0]/95 via-[#0032A0]/90 to-[#001F66]/95"
                >
                </div>
                <div
                    class="absolute -bottom-8 -right-8 w-32 h-32 bg-white/5 rounded-full blur-2xl group-hover:bg-white/10 transition-all duration-500"
                >
                </div>

                <div
                    class="bg-white/10 backdrop-blur-sm w-14 h-14 rounded-2xl flex items-center justify-center border border-white/10 group-hover:bg-white/20 transition-all duration-500 relative z-10"
                >
                    <Award class="text-white size-6" />
                </div>
                <div class="space-y-1.5 relative z-10">
                    <p
                        class="text-white/60 text-sm tracking-wide uppercase font-medium"
                    >
                        Años en el Mercado
                    </p>
                    <p
                        class="text-5xl lg:text-6xl font-bold text-white leading-none"
                    >
                        <span class="inline-block">+</span><span
                            class="counter"
                            data-target="25">0</span
                        >
                    </p>
                    <p class="text-white/40 text-sm font-general-sans">
                        De experiencia comprobada
                    </p>
                </div>
            </div>

            {/* Especialidades */}
            <div
                class="lg:col-span-8 rounded-4xl overflow-hidden relative min-h-100 group transition-all duration-500 hover:shadow-2xl hover:-translate-y-1"
            >
                <Image
                    src={bento4}
                    alt="Especialidades construcción"
                    class="absolute inset-0 h-full w-full object-cover transition-transform duration-1000 group-hover:scale-110"
                />
                <div
                    class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-black/10 group-hover:from-black/90 transition-all duration-500"
                >
                </div>
                <div class="relative h-full flex items-end p-7 lg:p-10">
                    <div class="flex items-center gap-5">
                        <div
                            class="bg-white/15 backdrop-blur-md p-2.5 rounded-2xl flex items-center justify-center border border-white/20 group-hover:bg-white/25 transition-all duration-500"
                        >
                            <Briefcase class="text-white size-6" />
                        </div>
                        <div class="space-y-2">
                            <h3 class="text-white text-2xl font-bold">
                                Especialidades
                            </h3>
                            <div class="flex flex-wrap gap-2">
                                <span
                                    class="bg-white/15 backdrop-blur-sm px-3 py-1.5 rounded-full text-white/90 text-sm border border-white/10 hover:bg-white/25 transition-colors duration-300 cursor-default"
                                    >Hormigón pretensado</span
                                >
                                <span
                                    class="bg-white/15 backdrop-blur-sm px-3 py-1.5 rounded-full text-white/90 text-sm border border-white/10 hover:bg-white/25 transition-colors duration-300 cursor-default"
                                    >Tecnología de tensado</span
                                >
                                <span
                                    class="bg-white/15 backdrop-blur-sm px-3 py-1.5 rounded-full text-white/90 text-sm border border-white/10 hover:bg-white/25 transition-colors duration-300 cursor-default"
                                    >Estructuras especiales</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {/* Grupo Empresarial */}
            <div
                class="lg:col-span-4 rounded-4xl overflow-hidden relative min-h-100 group transition-all duration-500 hover:shadow-2xl hover:-translate-y-1"
            >
                <Image
                    src={imgBackgroundCompany}
                    alt="Grupo empresarial"
                    class="absolute inset-0 h-full w-full object-cover transition-transform duration-1000"
                />
                <div
                    class="absolute inset-0 bg-linear-to-t from-white via-white/95 to-white/70 group-hover:via-white/98 transition-all duration-500"
                >
                </div>
                <div
                    class="relative h-full flex flex-col justify-between p-7 lg:p-8"
                >
                    <h3 class="text-[#0032A0]/70 text-xl font-bold">
                        Grupo Empresarial
                    </h3>
                    <div class="space-y-3">
                        <a
                            href="https://tenaxconstruction.com.do/"
                            class="block bg-white/90 backdrop-blur-sm shadow-lg shadow-[#f46738]/5 px-5 py-3.5 rounded-2xl border border-[#0032A0]/10 hover:border-[#f46738] hover:shadow-xl hover:bg-white transition-all duration-300 group/card"
                            target="_blank"
                            rel="noopener noreferrer"
                            title="Ir a Tenax Construction"
                            aria-label="Ir a Tenax Construction"
                        >
                            <div class="flex items-center justify-between">
                                <span
                                    class="text-[#0032A0] group-hover/card:text-[#f46738] font-general-sans font-bold"
                                    >Tenax Construction</span
                                >
                                <ChevronRight
                                    class="size-5 text-[#0032A0]/50 group-hover/card:text-[#f46738] group-hover/card:translate-x-1 transition-all duration-300"
                                />
                            </div>
                        </a>
                        <a
                            href="https://drdrilling.com.do/"
                            class="block bg-white/90 backdrop-blur-sm shadow-lg shadow-[#eb4031]/5 px-5 py-3.5 rounded-2xl border border-[#0032A0]/10 hover:border-[#eb4031] hover:shadow-xl hover:bg-white transition-all duration-300 group/card"
                            target="_blank"
                            rel="noopener noreferrer"
                            title="Ir a Dr. Drilling"
                            aria-label="Ir a Dr. Drilling"
                        >
                            <div class="flex items-center justify-between">
                                <span
                                    class="text-[#0032A0] group-hover/card:text-[#eb4031] font-general-sans font-bold"
                                    >Dr. Drilling</span
                                >
                                <ChevronRight
                                    class="size-5 text-[#0032A0]/50 group-hover/card:text-[#eb4031] group-hover/card:translate-x-1 transition-all duration-300"
                                />
                            </div>
                        </a>
                        <a
                            href="/grupo-empresarial"
                            class="block bg-white/90 backdrop-blur-sm shadow-lg shadow-[#0032A0]/5 px-5 py-3.5 rounded-2xl border border-[#0032A0]/10 hover:border-[#0032A0] hover:shadow-xl hover:bg-white transition-all duration-300 group/card"
                            target="_blank"
                            rel="noopener noreferrer"
                            title="Ir a Conocer más"
                            aria-label="Ir a Conocer más"
                        >
                            <div class="flex items-center justify-between">
                                <span
                                    class="text-[#0032A0] group-hover/card:text-[#0032A0] font-general-sans font-bold"
                                    >Conocer más</span
                                >
                                <ChevronRight
                                    class="size-5 text-[#0032A0]/50 group-hover/card:text-[#0032A0] group-hover/card:translate-x-1 transition-all duration-300"
                                />
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Efecto shimmer para números */
    @keyframes shimmer {
        0% {
            background-position: -200% center;
        }
        100% {
            background-position: 200% center;
        }
    }

    .counter-number {
        background: linear-gradient(
            90deg,
            #ffffff 0%,
            #ffffff 40%,
            #b3d4ff 50%,
            #ffffff 60%,
            #ffffff 100%
        );
        background-size: 200% auto;
        -webkit-background-clip: text;
        background-clip: text;
        animation: shimmer 3s linear infinite;
    }
</style>

<script>
    document.addEventListener("astro:page-load", () => {
        // Animación de contadores
        const counters = document.querySelectorAll(".counter");

        const animateCounter = (counter: Element) => {
            const target = parseInt(
                counter.getAttribute("data-target") || "0",
            );
            const duration = 2000;
            const step = target / (duration / 16);
            let current = 0;

            const updateCounter = () => {
                current += step;
                if (current < target) {
                    counter.textContent = Math.floor(current).toString();
                    requestAnimationFrame(updateCounter);
                } else {
                    counter.textContent = target.toString();
                }
            };

            updateCounter();
        };

        // Intersection Observer para activar contadores cuando sean visibles
        const observerOptions = {
            threshold: 0.5,
            rootMargin: "0px",
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    const counter = entry.target;
                    animateCounter(counter);
                    observer.unobserve(counter);
                }
            });
        }, observerOptions);

        counters.forEach((counter) => {
            observer.observe(counter);
        });
    });
</script>
